<h2>Add a Match</h2>

<form action="/players/<% player_id %>/add" method="post">
  <label for="placement">Placement:</label>
  <input name="placement" placeholder="Place finished" type="text" value="">
  
  <label for="eliminations">Eliminations:</label>
  <input name="eliminations" placeholder="Eliminations" type="text" value="">
  
  <fieldset class="actions">
    <input type="submit" value="Add Data">
    <a href="/players/<%= player_id %>">Cancel</a>
  </fieldset>
</form>

